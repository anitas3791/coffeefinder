<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ParentLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/padding_all</item>
        <item name="android:paddingRight">@dimen/padding_all</item>
        <item name="android:paddingTop">@dimen/padding_all</item>
        <item name="android:paddingBottom">@dimen/padding_all</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="Address">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/address</item>
    </style>

    <style name="HorizontalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_all</item>
    </style>

    <style name="HorizontalLayout.First">
        <item name="android:paddingTop">@dimen/padding_all</item>
    </style>

    <style name="RowText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/regular_text</item>
    </style>

    <style name="RowText.Right">
        <item name="android:paddingLeft">@dimen/padding_all</item>
    </style>

</resources>
